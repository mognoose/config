bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+l move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+odiaeresis move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# move entire workspace to another monitor
bindsym Ctrl+Shift+$mod+odiaeresis move workspace to output right
bindsym Ctrl+Shift+$mod+l move workspace to output down
bindsym Ctrl+Shift+$mod+k move workspace to output up
bindsym Ctrl+Shift+$mod+j move workspace to output left

# alternatively, you can use the cursor keys:
